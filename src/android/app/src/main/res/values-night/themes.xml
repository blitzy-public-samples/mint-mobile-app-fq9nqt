<?xml version="1.0" encoding="utf-8"?>
<!--
Human Tasks:
1. Verify dark theme colors meet WCAG 2.1 AA contrast requirements (minimum 4.5:1 for normal text, 3:1 for large text)
2. Test dark theme under different lighting conditions to ensure readability
3. Validate dark theme appearance on different Android devices and OS versions
4. Confirm dark theme colors align with brand guidelines for dark mode
-->

<!-- 
Requirements addressed:
- 8.1 User Interface Design: Implements consistent visual styling and theme attributes for dark mode
- 8.1.8 Accessibility Features: Ensures high contrast mode support and proper text sizing in dark mode
- 8.1.1 Design System Key: Implements standardized design system elements for dark theme

Material Design version: 1.5.0
-->
<resources>
    <!-- Base application dark theme -->
    <style name="Theme.MintReplicaLite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorError">#CF6679</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#B3FFFFFF</item>

        <!-- System bars -->
        <item name="android:statusBarColor">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MintReplicaLite.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MintReplicaLite.Headline2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MintReplicaLite.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MintReplicaLite.Body2.Dark</item>
        <item name="textAppearanceButton">@style/TextAppearance.MintReplicaLite.Button.Dark</item>
    </style>

    <!-- No action bar theme variant -->
    <style name="Theme.MintReplicaLite.NoActionBar" parent="Theme.MintReplicaLite">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Typography styles -->
    <style name="TextAppearance.MintReplicaLite.Headline1.Dark" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Headline2.Dark" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Body2.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#B3FFFFFF</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Button.Dark" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:letterSpacing">1.25</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- Shape appearances -->
    <style name="ShapeAppearance.MintReplicaLite.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.MintReplicaLite.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MintReplicaLite.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>