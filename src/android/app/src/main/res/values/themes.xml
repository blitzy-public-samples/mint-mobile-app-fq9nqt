- 8.1.8 Accessibility Features: Ensures high contrast mode support and proper text sizing in light mode
- 8.1.1 Design System Key: Implements standardized design system elements for light theme

Material Design version: 1.5.0
-->
<resources>
    <!-- Base application theme -->
    <style name="Theme.MintReplicaLite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Background and surface colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Status and navigation bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Typography styles -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.MintReplicaLite.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.MintReplicaLite.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.MintReplicaLite.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.MintReplicaLite.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.MintReplicaLite.Button</item>

        <!-- Shape appearances -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MintReplicaLite.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MintReplicaLite.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MintReplicaLite.LargeComponent</item>
    </style>

    <!-- Theme variant without action bar -->
    <style name="Theme.MintReplicaLite.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.MintReplicaLite.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.25</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="TextAppearance.MintReplicaLite.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">500</item>
        <item name="android:letterSpacing">1.25</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Shape Appearances -->
    <style name="ShapeAppearance.MintReplicaLite.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="ShapeAppearance.MintReplicaLite.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.MintReplicaLite.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>