# Human Tasks:
# 1. Copy this file to .env and update values for your environment
# 2. Generate secure random values for sensitive credentials
# 3. Configure different values for development, staging, and production
# 4. Ensure SSL/TLS is enabled for production API endpoints
# 5. Set up proper token refresh mechanism
# 6. Configure OAuth 2.0 settings for Plaid integration
# 7. Rotate API keys and tokens regularly
# 8. Keep .env file out of version control

# Application Configuration
# Technical Specification/5.3.1 Frontend Technologies
VITE_APP_NAME=Mint Replica Lite
VITE_APP_VERSION=1.0.0

# API Configuration
# Technical Specification/5.2.2 API Gateway
VITE_API_BASE_URL=http://localhost:3000
VITE_API_TIMEOUT=30000
VITE_API_VERSION=v1

# Authentication Configuration
# Technical Specification/9.1 Authentication and Authorization
VITE_AUTH_SESSION_TIMEOUT=900000
VITE_AUTH_TOKEN_REFRESH_THRESHOLD=300000

# Plaid Integration Configuration
# Technical Specification/1.1 System Overview/Core Features
VITE_PLAID_ENV=sandbox
VITE_PLAID_CLIENT_ID=your_plaid_client_id
VITE_PLAID_PUBLIC_KEY=your_plaid_public_key

# Feature Flags
# Optional settings for development and debugging
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_LOGGER=true

# Security Settings
# Technical Specification/9.3.1 API Security
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_MIN_PASSWORD_LENGTH=12
VITE_REQUIRE_MFA=true

# Rate Limiting Configuration
# Technical Specification/5.2.2 API Gateway
VITE_API_RATE_LIMIT=100
VITE_API_RATE_WINDOW=60000

# Cache Configuration
# Technical Specification/5.1 High-Level Architecture Overview
VITE_CACHE_DURATION=300000

# Monitoring and Logging
# Optional settings for application monitoring
VITE_SENTRY_DSN=your_sentry_dsn
VITE_LOG_LEVEL=info

# UI Configuration
# Technical Specification/8.1 User Interface Design
VITE_UI_THEME=light
VITE_UI_ANIMATION_DURATION=300
VITE_UI_TOAST_DURATION=3000