{
  // Implements Technical Specification/5.3.1 Frontend Technologies - TypeScript 4.8+ and modern ECMAScript features
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "quoteProps": "as-needed",
  "jsxSingleQuote": false,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "bracketSameLine": false,
  "arrowParens": "always",
  "endOfLine": "lf",
  "embeddedLanguageFormatting": "auto",

  // Implements Technical Specification/A.1.2 Code Quality Standards - Enforces consistent code formatting
  "overrides": [
    {
      "files": "*.{ts,tsx}",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.{css,scss}",
      "options": {
        "parser": "css",
        "singleQuote": false
      }
    },
    {
      "files": "*.{json,jsonc}",
      "options": {
        "parser": "json",
        "singleQuote": false
      }
    },
    {
      "files": "*.{yml,yaml}",
      "options": {
        "parser": "yaml",
        "singleQuote": false
      }
    }
  ]
}